<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewLogotip"
        android:layout_width="344dp"
        android:layout_height="83dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/enter_page_logo"
        android:foreground="@drawable/enter_page_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogin"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="72dp"
        android:clickable="true"
        android:onClick="imageViewLoginClick"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogin2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogotip"
        app:srcCompat="@drawable/btn_loogin" />

    <ImageView
        android:id="@+id/imageViewSignUp2"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewSignUp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogin"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/btn_signup2" />

    <ImageView
        android:id="@+id/imageViewSignUp"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogin"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/btn_signup" />

    <ImageView
        android:id="@+id/imageViewLogin2"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="72dp"
        android:clickable="true"
        android:onClick="imageViewLoginClick"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSignUp2"
        app:layout_constraintStart_toStartOf="@+id/imageViewSignUp2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogotip"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/btn_login2" />

</androidx.constraintlayout.widget.ConstraintLayout>