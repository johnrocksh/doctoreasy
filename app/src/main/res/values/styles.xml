    <style name="styles_TextViewPatient">
        <item name="android:textColor">#3F535F</item>
        <item name="android:layout_marginLeft">20dp</item>>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/muli_extrabold</item>

    </style>

    <style name="style_days_of_week_doctor_shedule">
